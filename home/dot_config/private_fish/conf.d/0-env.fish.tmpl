{{- if eq .chezmoi.os "darwin" -}}
/opt/homebrew/bin/brew shellenv | source
{{- end }}

set -gx XDG_CONFIG_HOME "$HOME/.config"

set -g fish_greeting

if type -q nvim
  set -gx EDITOR nvim
  set -gx VISUAL nvim
else if type -q vim
  set -gx EDITOR vim
  set -gx VISUAL vim
else
  set -gx EDITOR vi
  set -gx VISUAL vi
end

fish_add_path ~/.cargo/bin
fish_add_path ~/miniconda3/bin
fish_add_path ~/.rye/shims
